generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String            @id @default(uuid())
  name           String
  email          String            @unique
  password       String
  createdAt      DateTime          @default(now())
  
  // Relationships
  ownedWorkspaces Workspace[]      @relation("WorkspaceOwner")
  memberships     WorkspaceMember[]
  cards           Card[]           @relation("CardAssignee")
  comments        Comment[]
  activityLogs    ActivityLog[]
}

model Workspace {
  id          String            @id @default(uuid())
  name        String
  description String?
  ownerId     String
  createdAt   DateTime          @default(now())
  
  // Relationships
  owner       User              @relation("WorkspaceOwner", fields: [ownerId], references: [id])
  members     WorkspaceMember[]
  boards      Board[]
  activityLogs ActivityLog[]
}

model WorkspaceMember {
  id          String    @id @default(uuid())
  workspaceId String
  userId      String
  role        Role      @default(MEMBER)
  joinedAt    DateTime  @default(now())

  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([workspaceId, userId])
}

model Board {
  id          String    @id @default(uuid())
  workspaceId String
  title       String
  bgImage     String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  lists       List[]
  
  // FIX: Added this line to complete the relation
  activityLogs ActivityLog[]
}

model List {
  id        String   @id @default(uuid())
  boardId   String
  title     String
  order     Float    @default(0)
  createdAt DateTime @default(now())

  board     Board    @relation(fields: [boardId], references: [id], onDelete: Cascade)
  cards     Card[]
}

model Card {
  id          String    @id @default(uuid())
  listId      String
  title       String
  description String?
  order       Float     @default(0)
  dueDate     DateTime?
  assigneeId  String?
  createdAt   DateTime  @default(now())

  list      List         @relation(fields: [listId], references: [id], onDelete: Cascade)
  assignee  User?        @relation("CardAssignee", fields: [assigneeId], references: [id])
  comments  Comment[]
}

model Comment {
  id        String   @id @default(uuid())
  cardId    String
  userId    String
  text      String
  createdAt DateTime @default(now())

  card      Card     @relation(fields: [cardId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id])
}

model ActivityLog {
  id          String   @id @default(uuid())
  workspaceId String
  userId      String
  boardId     String?  // Context field
  entityType  String
  entityTitle String
  action      String
  createdAt   DateTime @default(now())

  // Relationships
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id])
  board       Board?    @relation(fields: [boardId], references: [id], onDelete: SetNull)
}

enum Role {
  ADMIN
  MEMBER
}