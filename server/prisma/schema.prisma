// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String            @id @default(uuid())
  name           String
  email          String            @unique
  password       String
  createdAt      DateTime          @default(now())
  
  // Relationships
  ownedWorkspaces Workspace[]      @relation("WorkspaceOwner")
  memberships     WorkspaceMember[]
  cards           Card[]           @relation("CardAssignee") // Tasks assigned to user
  activity        ActivityLog[]
}

model Workspace {
  id          String            @id @default(uuid())
  name        String
  description String?
  ownerId     String
  createdAt   DateTime          @default(now())
  
  // Relationships
  owner       User              @relation("WorkspaceOwner", fields: [ownerId], references: [id])
  members     WorkspaceMember[]
  boards      Board[]
}

model WorkspaceMember {
  id          String    @id @default(uuid())
  workspaceId String
  userId      String
  role        Role      @default(MEMBER) // ADMIN or MEMBER
  joinedAt    DateTime  @default(now())

  // Relationships
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([workspaceId, userId]) // A user can join a workspace only once
}

model Board {
  id          String    @id @default(uuid())
  workspaceId String
  title       String
  bgImage     String?   // URL for unsplash image or color hex
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relationships
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  lists       List[]
  activity    ActivityLog[]
}

model List {
  id        String   @id @default(uuid())
  boardId   String
  title     String
  order     Float    @default(0) // Logic for drag & drop sorting
  createdAt DateTime @default(now())

  // Relationships
  board     Board    @relation(fields: [boardId], references: [id], onDelete: Cascade)
  cards     Card[]
}

model Card {
  id          String    @id @default(uuid())
  listId      String
  title       String
  description String?
  order       Float     @default(0) // Logic for drag & drop sorting
  dueDate     DateTime?
  assigneeId  String?
  createdAt   DateTime  @default(now())

  // Relationships
  list      List         @relation(fields: [listId], references: [id], onDelete: Cascade)
  assignee  User?        @relation("CardAssignee", fields: [assigneeId], references: [id])
}

model ActivityLog {
  id        String   @id @default(uuid())
  boardId   String
  userId    String
  action    String   // e.g., "moved card X to Done"
  createdAt DateTime @default(now())

  board     Board    @relation(fields: [boardId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id])
}

enum Role {
  ADMIN
  MEMBER
}